<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:padding="20dp">
    <TextView
        android:id="@+id/tvUsername"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@id/ivImage"
        android:layout_alignRight="@id/ivProfilePic"
        android:layout_marginStart="53dp"
        android:layout_marginTop="0dp"
        android:layout_marginRight="-102dp"
        android:paddingTop="5dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textStyle="bold"
        tools:text="username" />

    <ImageView
        android:id="@+id/ivImage"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="36dp"
        android:paddingTop="5dp"
        android:scaleType="centerCrop"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/tvDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btnLike"
        android:layout_alignBottom="@id/tvUsernameSmall"
        android:layout_marginStart="5dp"
        android:layout_marginTop="10dp"
        android:layout_toEndOf="@id/tvUsernameSmall"
        tools:text="sample description" />

    <ImageButton
        android:id="@+id/btnLike"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_below="@+id/ivImage"
        android:layout_alignStart="@id/ivImage"
        android:layout_marginStart="3dp"
        android:layout_marginTop="5dp"
        android:adjustViewBounds="true"
        android:background="#FFFFFF"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/ufi_heart" />

    <ImageButton
        android:id="@+id/btnComment"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_below="@+id/ivImage"
        android:layout_alignBottom="@+id/btnLike"
        android:layout_marginStart="1dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="2dp"
        android:layout_toEndOf="@+id/btnLike"
        android:adjustViewBounds="true"
        android:background="#FFFFFF"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/ufi_comment" />

    <ImageButton
        android:id="@+id/btnSave"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_below="@+id/ivImage"
        android:layout_alignEnd="@id/ivImage"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="5dp"
        android:adjustViewBounds="true"
        android:background="#FFFFFF"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/ufi_save" />

    <TextView
        android:id="@+id/tvUsernameSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btnLike"
        android:layout_alignStart="@id/ivImage"
        android:layout_marginTop="10dp"
        android:textStyle="bold"
        tools:text="carrie" />

    <ImageView
        android:id="@+id/ivProfilePic"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignStart="@id/ivImage"
        android:layout_alignBottom="@id/tvUsername"
        android:paddingTop="5dp"
        tools:layout_editor_absoluteX="6dp"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/tvTimestamp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvUsernameSmall"
        android:layout_alignStart="@id/tvUsernameSmall"
        android:layout_marginTop="3dp"
        android:textSize="10sp"
        tools:text="just now" />

</RelativeLayout>